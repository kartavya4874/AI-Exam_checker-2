# Hybrid AI University Exam Checking System
# Environment Configuration Template
# Copy to .env and fill in your values

# ─── OpenAI API ───
OPENAI_API_KEY=sk-your-openai-api-key-here

# ─── Database ───
DB_PATH=./exam_checker.db

# ─── Threading ───
MAX_THREADS=8

# ─── Grading ───
TOTAL_MARKS_DEFAULT=100
GRADE_BOUNDARIES={"A+":95,"A":85,"B+":75,"B":65,"C":55,"D":45,"F":0}
NEGATIVE_MARKING_FACTOR=0.0

# ─── Web Portal ───
PORTAL_HOST=0.0.0.0
PORTAL_PORT=8000

# ─── Preprocessing ───
BLANK_DETECTION_THRESHOLD=0.02

# ─── OCR ───
TROCR_BATCH_SIZE=8

# ─── Evaluation Weights ───
CLIP_SIMILARITY_WEIGHT=0.3
GPT4O_WEIGHT=0.7

# ─── Processing ───
REPROCESS_EXISTING=false
LOG_LEVEL=INFO
TEMP_DIR=./temp_processing
MODELS_CACHE_DIR=./model_cache
